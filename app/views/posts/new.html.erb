<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="field">
        <label class="form-text">会社名</label>
        <span class="indispensable">必須</span>
        <%= form.text_field :campany %>
      </div>

      <div class="field">
        <label class="form-text">部署</label>
        <span class="indispensable">必須</span>
        <%= form.text_field :department %>
      </div>

      <div class="field">
        <label class="form-text">業種</label>
        <span class="indispensable">必須</span>
        <%= form.text_field :industry %>
      </div>

      <div class="field">
        <label class="form-text">職種</label>
        <span class="indispensable">必須</span>
        <%= form.text_field :occupation %>
      </div>

      <div class="field">
        <label class="form-text">仕事内容</label>
        <span class="indispensable">必須</span>
        <%= form.text_area :description %>
      </div>

      <div class="field">
        <label class="form-text">身についたスキル</label>
        <span class="indispensable">必須</span>
        <%= form.text_area :skill %>
      </div>
      
      <%= form.submit "投稿" %>
    <% end %>
  </div>
</div>